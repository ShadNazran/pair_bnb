<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Description</th>
      <th>Price</th>
      <th>City</th>
      <th>Property Types</th>
      <th>Room Number</th>
      <th>Bed Number</th>
      <th>Guest Number</th>
      <th>Pets Allowed</th>
      <th>Smoker</th>
      <th>Address</th>
      <th>Zipcode</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Listing.order('created_at DESC').each do |listing| %>
      <tr>
        <td><%= listing.user %></td>
        <td><%= listing.description %></td>
        <td><%= listing.price %></td>
        <td><%= listing.city%></td>
        <td><%= listing.property_types %></td>
        <td><%= listing.room_number %></td>
        <td><%= listing.bed_number %></td>
        <td><%= listing.guest_number %></td>
        <td><%= listing.pets_allowed %></td>
        <td><%= listing.smoker %></td>
        <td><%= listing.address %></td>
        <td><%= listing.zipcode %></td>
        <td><%= listing.state %></td>
        <td><%= listing.country %></td>



        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @posts %>
<%= link_to 'New Listing', new_listing_path %>
